{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs", // or "NodeNext" if you're ESM
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true
  }
}
