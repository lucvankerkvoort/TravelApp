{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "alias": {
    "@shared/*": ["../shared/*"]
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
